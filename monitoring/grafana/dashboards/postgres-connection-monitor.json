      "legend": {
        "show": true,
        "values": true,
        "min": false,
        "max": true,
        "current": true,
        "total": false,
        "avg": true
      },
      "alert": {
        "conditions": [
          {
            "evaluator": {
              "params": [10],
              "type": "gt"
            },
            "operator": {
              "type": "and"
            },
            "query": {
              "params": ["A", "10m", "now"]
            },
            "reducer": {
              "params": [],
              "type": "avg"
            },
            "type": "query"
          }
        ],
        "executionErrorState": "alerting",
        "frequency": "1m",
        "handler": 1,
        "name": "每個CPU核心連線數過多",
        "noDataState": "no_data",
        "notifications": []
      },
      "nullPointMode": "connected"
    },
    {
      "id": 10,
      "title": "連線年齡分佈（按狀態）",
      "type": "heatmap",
      "gridPos": {
        "x": 12,
        "y": 32,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "rate(pg_connection_age_seconds_bucket[5m])",
          "legendFormat": "{{state}}",
          "refId": "A",
          "format": "heatmap"
        }
      ],
      "dataFormat": "tsbuckets",
      "heatmap": {},
      "cards": {
        "cardPadding": 2
      },
      "color": {
        "mode": "spectrum",
        "cardColor": "#b4ff00",
        "colorScale": "sqrt",
        "exponent": 0.5,
        "colorScheme": "interpolateSpectral"
      },
      "legend": {
        "show": true
      },
      "tooltip": {
        "show": true,
        "showHistogram": true
      },
      "xAxis": {
        "show": true
      },
      "yAxis": {
        "format": "s",
        "show": true
      }
    }
  ],
  "editable": true,
  "hideControls": false,
  "schemaVersion": 16,
  "style": "dark",
  "tags": [
    "postgresql",
    "connection-pool",
    "monitoring",
    "connection-leak"
  ],
  "templating": {
    "list": []
  },
  "annotations": {
    "list": [
      {
        "datasource": "Prometheus",
        "enable": true,
        "expr": "ALERTS{alertname=~\".*Connection.*\"}",
        "iconColor": "red",
        "name": "Connection Alerts",
        "step": "60s",
        "tagKeys": "alertname,severity",
        "textFormat": "{{alertname}}: {{description}}",
        "titleFormat": "Alert"
      }
    ]
  },
  "version": 1
}
