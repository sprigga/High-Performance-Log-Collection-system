{
  "id": null,
  "uid": "postgres-connection-monitor",
  "title": "PostgreSQL 連線池監控儀表板",
  "timezone": "Asia/Taipei",
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "連線池使用情況",
      "type": "graph",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "pg_pool_max_size",
          "legendFormat": "最大連線數",
          "refId": "A"
        },
        {
          "datasource": "Prometheus",
          "expr": "pg_pool_size",
          "legendFormat": "當前連線池大小",
          "refId": "B"
        },
        {
          "datasource": "Prometheus",
          "expr": "pg_pool_in_use_connections",
          "legendFormat": "使用中連線",
          "refId": "C"
        },
        {
          "datasource": "Prometheus",
          "expr": "pg_pool_available_connections",
          "legendFormat": "可用連線",
          "refId": "D"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "連線數 (個)",
          "min": 0,
          "show": true
        },
        {
          "format": "short",
          "show": false
        }
      ],
      "xaxis": {
        "show": true,
        "mode": "time"
      },
      "lines": true,
      "fill": 0,
      "linewidth": 2,
      "pointradius": 2,
      "points": false,
      "bars": false,
      "stack": false,
      "percentage": false,
      "legend": {
        "show": true,
        "values": true,
        "min": true,
        "max": true,
        "current": true,
        "total": false,
        "avg": true
      },
      "nullPointMode": "connected"
    },
    {
      "id": 2,
      "title": "連線池使用率",
      "type": "graph",
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "(pg_pool_in_use_connections / pg_pool_max_size) * 100",
          "legendFormat": "連線池使用率",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "label": "使用率 (%)",
          "min": 0,
          "max": 100,
          "show": true
        },
        {
          "format": "short",
          "show": false
        }
      ],
      "xaxis": {
        "show": true,
        "mode": "time"
      },
      "lines": true,
      "fill": 0,
      "linewidth": 2,
      "pointradius": 2,
      "points": false,
      "bars": false,
      "stack": false,
      "percentage": false,
      "legend": {
        "show": true,
        "values": true,
        "min": false,
        "max": true,
        "current": true,
        "total": false,
        "avg": true
      },
      "alert": {
        "conditions": [
          {
            "evaluator": {
              "params": [80],
              "type": "gt"
            },
            "operator": {
              "type": "and"
            },
            "query": {
              "params": ["A", "5m", "now"]
            },
            "reducer": {
              "params": [],
              "type": "avg"
            },
            "type": "query"
          }
        ],
        "executionErrorState": "alerting",
        "frequency": "1m",
        "handler": 1,
        "name": "連線池使用率過高",
        "noDataState": "no_data",
        "notifications": []
      },
      "nullPointMode": "connected"
    },
    {
      "id": 3,
      "title": "連線獲取時間 (P50, P95, P99)",
      "type": "graph",
      "gridPos": {
        "x": 0,
        "y": 8,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "histogram_quantile(0.50, rate(pg_connection_acquire_duration_seconds_bucket[5m]))",
          "legendFormat": "P50",
          "refId": "A"
        },
        {
          "datasource": "Prometheus",
          "expr": "histogram_quantile(0.95, rate(pg_connection_acquire_duration_seconds_bucket[5m]))",
          "legendFormat": "P95",
          "refId": "B"
        },
        {
          "datasource": "Prometheus",
          "expr": "histogram_quantile(0.99, rate(pg_connection_acquire_duration_seconds_bucket[5m]))",
          "legendFormat": "P99",
          "refId": "C"
        }
      ],
      "yaxes": [
        {
          "format": "s",
          "label": "延遲時間 (秒)",
          "show": true
        },
        {
          "format": "short",
          "show": false
        }
      ],
      "xaxis": {
        "show": true,
        "mode": "time"
      },
      "lines": true,
      "fill": 0,
      "linewidth": 2,
      "pointradius": 2,
      "points": false,
      "bars": false,
      "stack": false,
      "percentage": false,
      "legend": {
        "show": true,
        "values": true,
        "min": false,
        "max": true,
        "current": true,
        "total": false,
        "avg": true
      },
      "nullPointMode": "connected"
    },
    {
      "id": 4,
      "title": "連線獲取統計",
      "type": "graph",
      "gridPos": {
        "x": 12,
        "y": 8,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "rate(pg_connection_acquire_total{status=\"success\"}[1m])",
          "legendFormat": "成功/秒",
          "refId": "A"
        },
        {
          "datasource": "Prometheus",
          "expr": "rate(pg_connection_acquire_total{status=\"timeout\"}[1m])",
          "legendFormat": "超時/秒",
          "refId": "B"
        },
        {
          "datasource": "Prometheus",
          "expr": "rate(pg_connection_acquire_total{status=\"error\"}[1m])",
          "legendFormat": "錯誤/秒",
          "refId": "C"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "獲取/秒",
          "min": 0,
          "show": true
        },
        {
          "format": "short",
          "show": false
        }
      ],
      "xaxis": {
        "show": true,
        "mode": "time"
      },
      "lines": true,
      "fill": 0,
      "linewidth": 2,
      "pointradius": 2,
      "points": false,
      "bars": false,
      "stack": false,
      "percentage": false,
      "legend": {
        "show": true,
        "values": true,
        "min": false,
        "max": true,
        "current": true,
        "total": false,
        "avg": true
      },
      "nullPointMode": "connected"
    },
    {
      "id": 5,
      "title": "長時間運行的連線（連線洩漏檢測）",
      "type": "graph",
      "gridPos": {
        "x": 0,
        "y": 16,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "pg_connection_long_running_total{threshold_seconds=\"60\"}",
          "legendFormat": "> 1分鐘",
          "refId": "A"
        },
        {
          "datasource": "Prometheus",
          "expr": "pg_connection_long_running_total{threshold_seconds=\"300\"}",
          "legendFormat": "> 5分鐘",
          "refId": "B"
        },
        {
          "datasource": "Prometheus",
          "expr": "pg_connection_long_running_total{threshold_seconds=\"900\"}",
          "legendFormat": "> 15分鐘",
          "refId": "C"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "連線數 (個)",
          "min": 0,
          "show": true
        },
        {
          "format": "short",
          "show": false
        }
      ],
      "xaxis": {
        "show": true,
        "mode": "time"
      },
      "lines": true,
      "fill": 0,
      "linewidth": 2,
      "pointradius": 2,
      "points": false,
      "bars": false,
      "stack": false,
      "percentage": false,
      "legend": {
        "show": true,
        "values": true,
        "min": false,
        "max": true,
        "current": true,
        "total": false,
        "avg": true
      },
      "alert": {
        "conditions": [
          {
            "evaluator": {
              "params": [5],
              "type": "gt"
            },
            "operator": {
              "type": "and"
            },
            "query": {
              "params": ["B", "5m", "now"]
            },
            "reducer": {
              "params": [],
              "type": "avg"
            },
            "type": "query"
          }
        ],
        "executionErrorState": "alerting",
        "frequency": "1m",
        "handler": 1,
        "name": "檢測到可能的連線洩漏",
        "noDataState": "no_data",
        "notifications": []
      },
      "nullPointMode": "connected"
    },
    {
      "id": 6,
      "title": "累計連線洩漏數",
      "type": "graph",
      "gridPos": {
        "x": 12,
        "y": 16,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "pg_connection_leaked_total",
          "legendFormat": "洩漏連線總數",
          "refId": "A"
        },
        {
          "datasource": "Prometheus",
          "expr": "rate(pg_connection_leaked_total[5m])",
          "legendFormat": "洩漏速率/秒",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "數量",
          "min": 0,
          "show": true
        },
        {
          "format": "short",
          "show": false
        }
      ],
      "xaxis": {
        "show": true,
        "mode": "time"
      },
      "lines": true,
      "fill": 0,
      "linewidth": 2,
      "pointradius": 2,
      "points": false,
      "bars": false,
      "stack": false,
      "percentage": false,
      "legend": {
        "show": true,
        "values": true,
        "min": false,
        "max": true,
        "current": true,
        "total": true,
        "avg": true
      },
      "nullPointMode": "connected"
    },
    {
      "id": 7,
      "title": "資料庫連線狀態分佈",
      "type": "graph",
      "gridPos": {
        "x": 0,
        "y": 24,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "pg_connections_active_queries{datname=\"logsdb\"}",
          "legendFormat": "活躍查詢",
          "refId": "A"
        },
        {
          "datasource": "Prometheus",
          "expr": "pg_connections_idle_in_transaction{datname=\"logsdb\"}",
          "legendFormat": "Idle in Transaction",
          "refId": "B"
        },
        {
          "datasource": "Prometheus",
          "expr": "pg_connections_waiting{datname=\"logsdb\"}",
          "legendFormat": "等待鎖",
          "refId": "C"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "連線數 (個)",
          "min": 0,
          "show": true
        },
        {
          "format": "short",
          "show": false
        }
      ],
      "xaxis": {
        "show": true,
        "mode": "time"
      },
      "lines": true,
      "fill": 0,
      "linewidth": 2,
      "pointradius": 2,
      "points": false,
      "bars": false,
      "stack": false,
      "percentage": false,
      "legend": {
        "show": true,
        "values": true,
        "min": false,
        "max": true,
        "current": true,
        "total": false,
        "avg": true
      },
      "nullPointMode": "connected"
    },
    {
      "id": 8,
      "title": "連線使用率 vs max_connections",
      "type": "graph",
      "gridPos": {
        "x": 12,
        "y": 24,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "pg_connection_usage_ratio * 100",
          "legendFormat": "連線使用率",
          "refId": "A"
        },
        {
          "datasource": "Prometheus",
          "expr": "pg_max_connections",
          "legendFormat": "max_connections 設定值",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "label": "使用率 (%)",
          "min": 0,
          "max": 100,
          "show": true
        },
        {
          "format": "short",
          "label": "max_connections",
          "show": true
        }
      ],
      "xaxis": {
        "show": true,
        "mode": "time"
      },
      "lines": true,
      "fill": 0,
      "linewidth": 2,
      "pointradius": 2,
      "points": false,
      "bars": false,
      "stack": false,
      "percentage": false,
      "legend": {
        "show": true,
        "values": true,
        "min": false,
        "max": true,
        "current": true,
        "total": false,
        "avg": true
      },
      "nullPointMode": "connected"
    },
    {
      "id": 9,
      "title": "每個 CPU 核心的連線數",
      "type": "graph",
      "gridPos": {
        "x": 0,
        "y": 32,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "pg_connections_per_cpu_core",
          "legendFormat": "連線數/CPU核心",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "連線數/核心",
          "min": 0,
          "show": true
        },
        {
          "format": "short",
          "show": false
        }
      ],
      "xaxis": {
        "show": true,
        "mode": "time"
      },
      "lines": true,
      "fill": 0,
      "linewidth": 2,
      "pointradius": 2,
